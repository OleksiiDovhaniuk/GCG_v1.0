<EmptySignal@BoxLayout>:
    canvas:
        Clear

        Color:
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgb: (0, 0, 0)
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: self.height/10
            cap: 'square'
            joint: 'miter'

