<TxtInput>:
    background_normal: self.theme + 'TextInput_normal'
    background_active: self.theme + 'TextInput_focused'
    background_disabled_normal: self.theme + 'TextInput_disabled'
    hint_text_color: (.4, .4, .4, 1)
    cursor_width: 2
    cursor_color: (.305, .643, .807, 1)
    write_tab: False
    multiline: False

<AlgorithmConfigsInput>:
    size_hint: None, None
    size: 72, 26
    font_size: 14

<NameInput>:
    background_normal: self.theme + 'Empty'
    size_hint: .9, None
    height: 36
    pos_hint: {'center_x': .5, 'center_y': .5}
    text_color: (0, 0, 0, 1)
    font_size: 24
    cursor_color: (.305, .643, .807, 1)
    valign: 'middle'
    halign: 'center'
    on_focus: self.select_textinput()
