<TruthTable>:
    GreyDefault:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        canvas.before:
            Clear
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                source: self.theme + 'bg'
                pos: self.pos
                size: self.size
        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            BoxLayout:
                id: scroll_view
                size_hint: None, None
                size: 1300, 1000
                pos_hint:{'left': 1}
                BoxLayout:
                    id: inputs_cont
                    orientation: 'vertical'
                    size_hint:  None, None
                    size: 600, 1000
                    Lbl:
                        text: 'Inputs'
                        font_size: 18
                    BoxLayout:
                        id: inputs_tbl
                        orientation: 'vertical'
                BoxLayout:
                    id: outputs_cont
                    orientation: 'vertical'
                    size_hint:  None, None
                    size: 600, 1000
                    Lbl:
                        text: 'Outputs'
                        font_size: 18
                    BoxLayout:
                        id: outputs_tbl
                        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 44
            padding: 20, 0
            BoxLayout:
            Btn:
                text: "Reset"
                on_release: root.reset()
            Separator10
            Btn:
                text: "Cancel"
                on_release: root.cancel()
            Separator10
            Btn:
                id: apply_btn
                text: "Apply"
                on_release: root.apply()
