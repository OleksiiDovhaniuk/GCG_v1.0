<Load>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        GreyDefault:
            size_hint_y: None
            height: 14
        WhiteDefault:
            size_hint_y: None
            height: 430
            FileChooser:
                id: file_chooser
                multiselect: False
                rootpath: "saves\confs"
                on_selection: file_input.show(self.selection[0])
                FlChsrListLayout
                FileChooserIconLayout
        GreyDefault:
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: None
                height: 44
                padding: 5, 0
                Lbl:
                    text: 'File name: '
                    size_hint: None, None
                    size: 130, 34
                    font_size: 18
                    halign: 'right'
                    pos_hint: {'y_center':.5}
                FileInput:
                    id: file_input
                    size_hint_y: None
                    height: 32
                    font_size: 16
                    valign: 'bottom'
                    multiline: False
            BoxLayout:
                size_hint_y: None
                height: 44
                padding: 20, 0
                ListViewBtn:
                    on_press: file_chooser.view_mode = 'list'
                Separator10
                IconViewBtn:
                    on_press: file_chooser.view_mode = 'icon'
                BoxLayout:
                Btn:
                    text: "Cancel"
                    on_release: root.cancel()
                Separator10
                Btn:
                    text: "Open"
                    on_release:
                        root.load(file_chooser.path,\
                        file_chooser.selection)

