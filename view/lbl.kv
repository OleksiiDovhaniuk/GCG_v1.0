<Lbl>:
    font_name: 'res/fonts/source_code_pro/SourceCodePro-Medium.otf'
    size_hint_y: None
    height: 26
    color: 0, 0, 0, 1
    halign: 'left'
    valign: 'middle'
    text_size: self.size
    font_size: 16

<InfoLbl>:
    background_disabled_normal: atlas + 'Lbl_Info'
    size_hint: None, None
    size: 400, 200
    halign: 'center'
    valign: 'center'
    color: .1, .1, .1, 1
    disabled: True

<InfoCoefLbl>:
    halign: 'right'
    color: self.STATUS[self.status]

<ResultsLbl>:
    halign: 'center'
    size_hint_y: None
    height: 28
    font_size: 16

<TitleLbl>:
    halign: 'center'
    text: '[u]'+ self.title + '[/u]'
    markup: True
    font_size: 20
