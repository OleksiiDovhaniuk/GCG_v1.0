<Cell>:
    background_normal:
        self.theme + 'Cell_hovered'\
        if self.hovered else self.theme + 'Cell_normal'
    background_down: self.theme + 'Cell_down'
    font_size: 16
    size_hint: None, None
    size: 48, 48
    color: 0, 0, 0, 1
    valign: 'center'
    halign: 'center'
    text_size: self.size

<TitleCell>:
    background_normal:
        self.theme + 'TitleCell_hovered' \
        if self.hovered else self.theme + 'TitleCell_normal'
    background_down: self.theme + 'TitleCell_down'
    foreground_color: (0, 0, 0, 1) if self.focus else (1, 1, 1, 1)
    font_size: 14 if self.focus else 15
    size_hint: None, None
    size: 48, 48
    halign: 'left' if self.focus else 'center'
    valign: 'center'
    padding: [2, 15] if self.focus else [0, 15]
    text_size: self.size
    multiline: False
    write_tab: False

<IndexCell>:
    background_normal:
        self.theme + 'IndexCell_hovered' \
        if self.hovered else self.theme + 'IndexCell_normal'
    background_down: self.theme + 'IndexCell_down'
    color: 1, 1, 1, 1
    text: 'del' if self.hovered else self.title

<AddCell>:
    background_normal:
        self.theme + 'AddCell_hovered' \
        if self.hovered else self.theme + 'AddCell_normal'
    background_down: self.theme + 'AddCell_down'
    color: 1, 1, 1, 1
    text: 'add' if self.hovered else '+'
    font_size: 16 if self.hovered else 24

<EmptyCell>:
    disabled: True
    background_disabled_normal: self.theme + 'Empty'
