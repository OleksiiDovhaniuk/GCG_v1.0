<HorisontalMenuBar>:
    size_hint_y: None
    height: 30
    canvas:
        Clear
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            source: "res/images/bg_h_menu.png"
            pos: self.pos
            size: self.size

<HorizontalConf>:
    size_hint_y: None
    heiht: 30

<VerticalMenuBar>:
    orientation: 'vertical'
    size_hint: None, 1
    width: 40
    canvas:
        Clear
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<LayoutConf>:
    padding: 20, .5*(self.height-26)
    size_hint: .95, None
    height: 40
    pos_hint: {'center_x': .5}
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            source: "res/images/bg_LayoutConf.png"
            pos: self.pos
            size: self.size

<TTblRow>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 48
