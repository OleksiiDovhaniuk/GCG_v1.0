<Main>:
    canvas:
        Clear
        Color:
            rgba: .7, .7, .7, 1
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        HorisontalMenuBar:
            id: top_menu
            Btn:
                text:      'File'
                id:         btn_file
                disabled:   True
            BoxLayout:
                id:          btn_run
                size_hint_x: None
                width: 120
                Btn:
                    text:      'Run'
                    on_release: root.run()
            Btn:
                text:    'Help'
                id:       btn_help
                disabled: True
        BoxLayout:
            orientation: 'horizontal'
            id:           workspace
            BoxLayout:
                id: plot
            BoxLayout:
                id:          side_conf_container
                size_hint_x: None
                width:       360
            VerticalMenuBar:
                id: side_bar
                width: 32
                Btn:
                    id: btn_algorithm
                    group: 'side_menu_btns'
                    background_normal:
                        self.theme + 'AlgorithmBtn_hovered'\
                        if self.hovered else self.theme + 'AlgorithmBtn_normal'
                    background_down: self.theme + 'AlgorithmBtn_down'
                    background_disabled_normal: self.theme + 'AlgorithmBtn_disabled'
                    on_release: root.show_config_algorithm()
                    size: 32, 138
                Btn:
                    id: btn_inputs
                    group: 'side_menu_btns'
                    background_normal:
                        self.theme + 'InputsBtn_hovered'\
                        if self.hovered else self.theme + 'InputsBtn_normal'
                    background_down: self.theme + 'InputsBtn_down'
                    background_disabled_normal: self.theme + 'InputsBtn_disabled'
                    on_release: root.show_config_inputs()
                    size: 32, 84
                Btn:
                    id: btn_plot
                    group: 'side_menu_btns'
                    background_normal:
                        self.theme + 'PlotBtn_hovered'\
                        if self.hovered else self.theme + 'PlotBtn_normal'
                    background_down: self.theme + 'PlotBtn_down'
                    background_disabled_normal: self.theme + 'PlotBtn_disabled'
                    on_release: root.show_config_plot()
                    size: 32, 84
                BoxLayout:
        HorisontalMenuBar:
            Label:
                id: status_bar
                text: 'Process: 78%'
                font_name: 'res/fonts/source_code_pro/SourceCodePro-Medium.otf'
                size_hint: None, None
                size: 130, 30
                color: 0, 0, 0, 1
            ArrowBtn:
                width: 24
                pos_hint: {'center_y': 0.5}
            BoxLayout:
