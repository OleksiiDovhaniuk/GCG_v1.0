 #:import atlas design.default_theme
<Main>:
    canvas:
        Clear
        Color:
            rgba: .5, .5, .5, .5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        GreyDefault:
            id: top_menu
            size_hint_y:None
            height: 34
            padding: (1, 1)
            Btn:
                text: 'File'
                id: btn_file
                disabled: True
            Separator1
            BoxLayout:
                id: btn_run
                size_hint_x: None
                width: 120
                Btn:
                    text: 'Run'
                    on_release: root.run()
            Separator1
            Btn:
                text: 'Help'
                id: btn_help
                disabled: True
        Separator1
        BoxLayout:
            orientation: 'horizontal'
            id:           workspace
            DarkDefault:
                id: plot
            BoxLayout:
                id: side_conf_container
                size_hint: None, 1
                width: 0
            Separator1
            GreyDefault:
                id: side_bar
                orientation: 'vertical'
                size_hint_x: None
                width: 34
                padding: 1, 0
                Btn:
                    id: btn_algorithm
                    group: 'side_menu_btns'
                    background_normal:
                        self.theme + 'AlgorithmBtn_hovered'\
                        if self.hovered else self.theme + 'AlgorithmBtn_normal'
                    background_down: self.theme + 'AlgorithmBtn_down'
                    background_disabled_normal: self.theme + 'AlgorithmBtn_disabled'
                    on_release: root.show_config_algorithm()
                    size: 32, 138
                Separator1
                Btn:
                    id: btn_inputs
                    group: 'side_menu_btns'
                    background_normal:
                        self.theme + 'InputsBtn_hovered'\
                        if self.hovered else self.theme + 'InputsBtn_normal'
                    background_down: self.theme + 'InputsBtn_down'
                    background_disabled_normal: self.theme + 'InputsBtn_disabled'
                    on_release: root.show_config_inputs()
                    size: 32, 84
                Separator1
                Btn:
                    id: btn_plot
                    group: 'side_menu_btns'
                    background_normal:
                        self.theme + 'PlotBtn_hovered'\
                        if self.hovered else self.theme + 'PlotBtn_normal'
                    background_down: self.theme + 'PlotBtn_down'
                    background_disabled_normal: self.theme + 'PlotBtn_disabled'
                    on_release: root.show_config_plot()
                    size: 32, 84
                Separator1
                Btn:
                    id: btn_results
                    group: 'side_menu_btns'
                    background_normal:
                        self.theme + 'ResultsBtn_hovered'\
                        if self.hovered else self.theme + 'ResultsBtn_normal'
                    background_down: self.theme + 'ResultsBtn_down'
                    background_disabled_normal: self.theme + 'ResultsBtn_disabled'
                    on_release: root.show_side_results()
                    size: 32, 111
                BoxLayout:
        Separator1
        GreyDefault:
            size_hint_y: None
            height: 30
            Label:
                id: status_bar
                text: 'Not started'
                font_name: 'res/fonts/source_code_pro/SourceCodePro-Medium.otf'
                size_hint: None, None
                size: 130, 30
                color: 0, 0, 0, 1
            ArrowBtn:
                width: 24
                pos_hint: {'center_y': 0.5}
            BoxLayout:
