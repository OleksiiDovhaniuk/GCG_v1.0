<Main>:
    canvas:
        Clear
        Color:
            rgba: .7, .7, .7, 1
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        HorisontalMenuBar:
            MenuBarBtn:
                text: 'File'
                id: btn_file
            MenuBarBtn:
                text: 'Edit'
                id: btn_edit
            MenuBarBtn:
                text: 'Run'
                id: btn_run
                width: 80
            MenuBarBtn:
                text: 'Help'
                id: btn_help
        BoxLayout:
            orientation: 'horizontal'
            id: workspace
            BoxLayout:
                id: plot
            BoxLayout:
                id: side_conf_container
                size_hint_x: None
                width: 360
            VerticalMenuBar:
                id: side_bar
                MenuBarBtn:
                    id: btn_algorithm
                    group: 'side_menu_btns'
                    background_normal:
                        "res/images/btn_h_Algorithm.png"\
                        if self.hovered else "res/images/btn_n_Algorithm.png"
                    background_down: "res/images/btn_d_Algorithm.png"
                    background_disabled_normal: "res/images/btn_d_Algorithm.png"
                    on_release: root.show_config_algorithm()
                    size: 40, 138
                MenuBarBtn:
                    id: btn_inputs
                    group: 'side_menu_btns'
                    background_normal:
                        "res/images/btn_h_Input.png"\
                        if self.hovered else "res/images/btn_n_Input.png"
                    background_down: "res/images/btn_d_Input.png"
                    background_disabled_normal: "res/images/btn_d_Input.png"
                    on_release: root.show_config_inputs()
                    size: 40, 84
                MenuBarBtn:
                    id: btn_plot
                    group: 'side_menu_btns'
                    background_normal:
                        "res/images/btn_h_Plot.png"\
                        if self.hovered else "res/images/btn_n_Plot.png"
                    background_down: "res/images/btn_d_Plot.png"
                    background_disabled_normal: "res/images/btn_d_Plot.png"
                    on_release: root.show_config_plot()
                    size: 40, 84
                BoxLayout:
        HorisontalMenuBar:
            id: status_bar

            Label:
                text: 'Process: 78%'
                font_name: 'res/fonts/source_code_pro/SourceCodePro-Medium.otf'
                size_hint: None, None
                size: 130, 30
                color: 0, 0, 0, 1
            MenuBarBtn:
                width: 30
                text: '>'
                pos_hint: {'center_y': 0.5}
