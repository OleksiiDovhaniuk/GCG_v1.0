<MenuBarBtn@HoverButton>:
    canvas.before:
        Clear
    size_hint: None, None
    height: 28
    background_normal: "res/images/bg_hover_button.png" if self.hovered else "res/images/bg_normal.png"
    background_down: "res/images/bg_hover_button.png"
    font_name: 'res/fonts/source_code_pro/SourceCodePro-Medium.otf'
    font_size: '18sp'
    color: 0, 0, 0, 1
    halign: 'center'
    valign: 'middle'
    text_size: self.size
<DropDownBtn@Button>:
    background_normal: "res/images/bg_hover_button.png" if self.hovered else "res/images/bg_normal.png"
<HorizontalBoxLayout@BoxLayout>:
    orientation: 'horizontal'
<HorisontalMenuBar@HorizontalBoxLayout>:
    size_hint: 1, None
    height: 30
    canvas:
        Clear
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            source: "res/images/bg_h_menu.png"
            pos: self.pos
            size: self.size
<VerticalMenuBar@BoxLayout>:
    orientation: 'vertical'
    size_hint: None, 1
    width: 40
<Main>:
    canvas:
        Clear
        Color:
            rgba: .7, .7, .7, 1
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'vertical'
    
        HorisontalMenuBar:
            id: menu_bar

            MenuBarBtn:
                text: 'File'
                id: btn_file
            MenuBarBtn:
                text: 'Edit'
            MenuBarBtn:
                text: 'View'
            MenuBarBtn:
                text: 'Go'
                width: 60
            MenuBarBtn:
                text: 'Help'

        BoxLayout:
            orientation: 'horizontal'
            id: workspace

                    
            BoxLayout:
                id: plot

            VerticalMenuBar:
                id: side_bar
                
                MenuBarBtn:
                    background_normal: "res/images/btn_h_Algorithm.png" if self.hovered else "res/images/btn_n_Algorithm.png"
                    background_down: "res/images/btn_d_Algorithm.png" 
                    size: 40, 138
                MenuBarBtn:
                    background_normal: "res/images/btn_h_Input.png" if self.hovered else "res/images/btn_n_Input.png"
                    background_down: "res/images/btn_d_Input.png" 
                    size: 40, 84
                MenuBarBtn:
                    background_normal: "res/images/btn_h_Plot.png" if self.hovered else "res/images/btn_n_Plot.png"
                    background_down: "res/images/btn_d_Plot.png" 
                    size: 40, 84
                BoxLayout:

        HorisontalMenuBar:
            id: status_bar
             
            Label:
                text: 'Process: 78%'
                font_name: 'res/fonts/source_code_pro/SourceCodePro-Medium.otf'
                size_hint: None, None
                size: 130, 30
                color: 0, 0, 0, 1
            MenuBarBtn:
                width: 30
                text: '>'
                pos_hint: {'center_y': 0.5}