<SideConf>:
    orientation: 'vertical'
    size_hint_x: 1
    width: 360
    BoxLayout:
        size_hint_y: None
        height: 34
        BoxLayout:
            size_hint_x: None
            width: 10
        Lbl:
            text: '[color=#133957]' + root.title + '[/color]'
            markup: True
        ArrowBtn:
            on_release: root.minimise()
    BoxLayout:
        id: container
        orientation: 'vertical'
        BoxLayout:
            BoxLayout:
            Btn:
                size_hint: None, None
                size: 240, 240
                pos_hint: {'center_y': .5}
                disabled: True
                background_disabled_normal: self.theme + 'ReservedPlace'
            BoxLayout:

<SideConfBottom>:
    size_hint_y: None
    height: 52
    padding: 26, 10
    BoxLayout:
    SaveAsBtn:
        on_release: root.parent.save_conf()
    BoxLayout:
        size_hint_x: None
        width: 10
    OpenBtn:
        on_release: root.parent.show_load()

<Inputs>:
    BoxLayout:
        size_hint_y: None
        height: 10
    NameInput:
        id: device_name
        text: 'Default Device'
    Separator10
    BoxLayout:
        padding: 10, 0
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 32
            EditBtn:
                on_release: root.show_ttbl()
            BoxLayout
        Lbl:
            # size_hint_x: None
            text: 'HELLO WORLD!'
            font_size: 26
        Separator10
