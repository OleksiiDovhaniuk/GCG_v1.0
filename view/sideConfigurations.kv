<SideConf>:
    orientation: 'vertical'
    size_hint_x: 1
    width: 360
    canvas.before:
        Clear
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            source: self.theme + 'bg'
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: None
        height: 34
        BoxLayout:
            size_hint_x: None
            width: 10
        Lbl:
            text: '[color=#133957]' + root.title + '[/color]'
            markup: True
        ArrowBtn:
            on_release: root.minimise()
    BoxLayout:
        id: container
        orientation: 'vertical'
        BoxLayout:
            BoxLayout:
            Btn:
                size_hint: None, None
                size: 240, 240
                pos_hint: {'center_y': .5}
                disabled: True
                background_disabled_normal: self.theme + 'ReservedPlace'
            BoxLayout:

<SideConfBottom>:
    size_hint_y: None
    height: 34
    padding: 26, 1
    BoxLayout:
    SaveAsBtn:
        id: save_as_btn
        on_release: root.save_conf()
    OpenBtn:
        id: open_btn
        on_release: root.show_load()


<Algorithm>:
    SideConfBottom:

<Inputs>:
    BoxLayout:
        size_hint_y: None
        height: 10
    NameInput:
        id: device_name
        text: 'Name of The Device'
    BoxLayout:
        size_hint: .8, None
        height: 40
        pos_hint: {'center_x': .5, 'center_y': .5}
        Btn:
            width: 300
            text: 'Edit the Truth Table'
            on_release: root.show_ttbl()
    BoxLayout:
        BoxLayout:
        Btn:
            size_hint: None, None
            size: 240, 240
            pos_hint: {'center_y': .5}
            disabled: True
            background_disabled_normal: self.theme + 'ReservedPlace'
        BoxLayout:
    SideConfBottom:

<Plot>:
    SideConfBottom:

<Results>:
    SideConfBottom:
