<SideConf>:
    orientation: 'vertical'
    size_hint_x: 1
    width: 360
    BoxLayout:
        size_hint_y: None
        height: 26
        Separator10
        Lbl:
            font_size: 12
            text: '[color=#133957]' + root.title + '[/color]'
            markup: True
        BoxLayout:
            size_hint_x: None
            orientation: 'vertical'
            width: 24
            ArrowBtn:
                on_release: root.minimise()
            Separator1
    LightDefault:
        size_hint_y: None
        height: 1
    BoxLayout:
        id: container
        orientation: 'vertical'
        BoxLayout:
            BoxLayout:
            Btn:
                size_hint: None, None
                size: 240, 240
                pos_hint: {'center_y': .5}
                disabled: True
                background_disabled_normal: self.theme + 'ReservedPlace'
            BoxLayout:

<SideConfBottom>:
    size_hint_y: None
    height: 52
    padding: 26, 10
    BoxLayout
    SaveAsBtn:
        id: save_as_btn
        on_release: root.parent.save_conf()
    Separator10
    OpenBtn:
        id: open_btn
        on_release: root.parent.show_load()

<Input>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 80
        padding: 10, 10
        Lbl:
            text: 'Truth Table of'
            font_size: 18
            valign: 'middle'
            halign: 'center'
        NameInput:
            id: device_name
            text: 'Default Device'
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            ScrollView:
                do_scroll_x: True
                do_scroll_y: True
                effect_cls: 'ScrollEffect'
                GreyDefault:
                    id: tbl_container
                    orientation: 'vertical'
                    size_hint: 1, None
                    size: 340, 240
                    Lbl:
                        id: tbl_lbl
                        size_hint_y: 1
                        text: root.str_ttbl['inputs']
                        font_size: 19
                        halign: 'center'
        Separator10
        Separator10
        Separator10
    BoxLayout:
        size_hint_y: None
        height: 52
        padding: 26, 10
        Btn:
            id: switch_btn
            text: 'inputs'
            on_release: root.switch_tbl()
        BoxLayout
        EditBtn:
            on_release: root.show_ttbl()
        Separator10
        SaveAsBtn:
            on_release: root.show_save()
        Separator10
        OpenBtn:
            on_release: root.show_load()

<Results>:
    ScrollView:
        do_scroll_y: True

        DefaultLayout:
            id: side_results_container
            orientation: 'vertical'
            size_hint_y: None
            height: 5000
            padding: 10, 10

            TitleLbl:
                title: 'Truth Table'

            ResultsLbl:
                id: ttbl_lbl
                text: 'no information is present'
                size_hint_y: None

            TitleLbl:
                id: results_title
                title: 'Results'

            DefaultLayout:
                id: results_container
                orientation: 'vertical'
                size_hint_y: None
                height: results_title.height

                ResultsLbl:
                    text: 'no information is present'

            TitleLbl:
                title: 'Configurations'

            ResultsLbl:
                id: configs_lbl
                text: 'no information is present'
                size_hint_y: None

            DefaultLayout
