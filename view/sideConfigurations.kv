<SideConf>:
    orientation: 'vertical'
    size_hint_x: None
    width: 360
    canvas.before:
        Clear
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            source: self.theme + 'bg'
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: None
        height: 24
        BoxLayout:
        ArrowBtn:
            on_release: root.minimise()

<Algorithm>:
    BoxLayout:
        id: algorithm_cont
        size_hint: 1, 1
        orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: .95, None
        height: 32
        padding: 20, 10
        Btn:
            text: 'cencel'
        Btn:
            text: 'apply'
        SaveAsBtn:
            on_release: root.save_conf()
        OpenBtn:
            on_release: root.show_load()

<Inputs>:
    BoxLayout:
        size_hint_y: None
        height: 10
    NameInput:
        id: device_name
        text: 'Name of The Device'
    BoxLayout:
        size_hint: .8, None
        height: 40
        pos_hint: {'center_x': .5, 'center_y': .5}
        Btn:
            width: 300
            text: 'Edit the Truth Table'
            on_release: root.show_ttbl()
    BoxLayout:
        BoxLayout:
        Btn:
            size_hint: None, None
            size: 240, 240
            pos_hint: {'center_y': .5}
            disabled: True
            background_disabled_normal: self.theme + 'ReservedPlace'
        BoxLayout:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: .95, None
        height: 50
        padding: 20, 5
        SaveAsBtn:
            disabled: True
        OpenBtn:
            disabled: True

<Plot>:
    BoxLayout:
        BoxLayout:
        Btn:
            size_hint: None, None
            size: 240, 240
            pos_hint: {'center_y': .5}
            disabled: True
            background_disabled_normal: self.theme + 'ReservedPlace'
        BoxLayout:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: .95, None
        height: 50
        padding: 20, 5
        SaveAsBtn:
            disabled: True
        OpenBtn:
            disabled: True
