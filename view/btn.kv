<Btn>:
    size_hint: None, None
    size: 120, 30
    background_normal:
        self.theme + 'Btn_hovered' \
        if self.hovered else self.theme + 'Btn_normal'
    background_down: self.theme + 'Btn_down'
    background_disabled_normal: self.theme + 'Btn_disabled'
    font_name: 'res/fonts/source_code_pro/SourceCodePro-Medium.otf'
    font_size: '18sp'
    color: 1, 1, 1, 1
    halign: 'center'
    valign: 'middle'
    text_size: self.size
    canvas.before:
        Clear

<ArrowBtn>:
    size: 24, 24
    background_normal:
        self.theme + 'ArrowBtn_hovered'\
        if self.hovered else self.theme + 'ArrowBtn_normal'
    background_down: self.theme + 'ArrowBtn_down'

