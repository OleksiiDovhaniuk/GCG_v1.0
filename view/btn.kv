<Btn>:
    size_hint: None, None
    size: 120, 28
    background_normal: "res/images/bg_hover_button.png" if self.hovered else "res/images/bg_normal.png"
    background_down: "res/images/bg_h_dropdown.png"
    font_name: 'res/fonts/source_code_pro/SourceCodePro-Medium.otf'
    font_size: '18sp'
    color: 0, 0, 0, 1
    halign: 'center'
    valign: 'middle'
    text_size: self.size
    canvas.before:
        Clear

<MenuBarBtn>:
    size_hint: None, None
    size: 100, 28
    background_normal: "res/images/bg_hover_button.png" if self.hovered else "res/images/bg_normal.png"
    background_down: "res/images/bg_hover_button.png"
    font_name: 'res/fonts/source_code_pro/SourceCodePro-Medium.otf'
    font_size: '18sp'
    color: 0, 0, 0, 1
    halign: 'center'
    valign: 'middle'
    text_size: self.size
    canvas.before:
        Clear

<MinimiseBtn>:
    size_hint: None, None
    size: 24, 24
    background_normal:
        "res/images/bg_BtnMinimise_hover.png"\
        if self.hovered else "res/images/bg_BtnMinimise_normal.png"
    background_down: "res/images/bg_BtnMinimise_down.png"

<SaveAsBtn>:
    size_hint: None, None
    size: 166, 47
    background_normal:
        "atlas://res/images/defaulttheme/bg_btn_SaveAs_hover"\
        if self.hovered else "atlas://res/images/defaulttheme/bg_btn_SaveAs_normal"
    background_down: "atlas://res/images/defaulttheme/bg_btn_SaveAs_down"
    canvas.before:
        Clear

<OpenBtn>:
    size_hint: None, None
    size: 146, 47
    background_normal:
        "atlas://res/images/defaulttheme/bg_btn_Open_hover"\
        if self.hovered else "atlas://res/images/defaulttheme/bg_btn_Open_normal"
    background_down: "atlas://res/images/defaulttheme/bg_btn_Open_down"
    canvas.before:
        Clear
